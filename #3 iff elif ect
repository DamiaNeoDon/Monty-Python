
height = float(input("enter your height in m: "))
weight = float(input("enter your weight in kg: "))




f_height = (float(height))
# print(height_in_m = height)
f_weight= (int(weight))
kwa_wz= f_height*f_height

BMI= round(f_weight/kwa_wz)
print(BMI)

if BMI <=18.5:
  print(f"Your BMI is {BMI}, you are underweight.Eat something!")
elif BMI <=25:
  print(f"Your BMI is {BMI}, you have normal weight.")
elif BMI <=30:
  print(f"Your BMI is {BMI}, you are slightly overweight.")
elif BMI <=35:
  print(f"Your BMI is {BMI}, you are fat.")
else:
  print(f"Your BMI is {BMI}, you are walking heart attack.")
  
  
  
